/* pages/reserved/rederved.wxss */
page{
  height: 100%;
  width: 100%;
}

.base-container{
  height: 100%;
  width: 100%;
}

.info-container{
  display: flex;
  flex-direction: row;
  height: 20%;
  width: 100%;
  align-items: center;
  background-color: #e8dada;
}

.reserving-container{
  height: 60%;
  padding: 30rpx 10rpx;
}

.test{
  height: 100%;
  width: 100%;
}


.separate-line{
  margin: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 2rpx;
  background-color: #999;
}


.ordering-container{
  margin: 20rpx;
  height: 90%;
  outline: 1rpx dashed #388c14;
}


.reserved-container{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 7%;
  width: 100%;
  bottom: 40rpx;
  background-color: #f5f5f5;
}

.scroll{
  width: 100%;
  height: 100%;
  overflow: hidden;
   white-space: nowrap;
}

#green{
  background-color: green;
}

#red{
  background-color: red;
}

#yellow{
  background-color: yellow;
}

.scroll-view-item {
  width: 100%;
  height: 100%;
  display: inline-block;
}